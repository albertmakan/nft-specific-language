{
  "name": "spm",
  "displayName": "spm",
  "description": "SPM - Language Support",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "spm",
      "aliases": ["spm", "spm"],
      "extensions": [".spm"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "spm",
      "scopeName": "source.spm",
      "path": "./syntaxes/spm.tmLanguage.json"
    }]
  },
    "main": "./client/out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.2.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  }
}
